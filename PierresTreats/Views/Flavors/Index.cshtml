@{
  Layout = "_Layout";
}

@using PierresTreats.Models

<h2>All Flavors:</h2>
<hr>

@if (Model.Count == 0)
{
  <p>There are no flavors added.</p>
}

@foreach(Flavor flavor in Model)
{
  <div class="card-deck">
    <div class="card text-center mb-3" style="width: 22rem;">
      <div class="card-body">
        <h5 class="card-title">@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId})</h5>
          <p class="card-text">Calories: @flavor.Calories</p>
      </div>
    </div>
  </div>
}
<br>
<p class= "btn btn-light">@Html.ActionLink("Add New Flavor", "Create", null, null, new { @class = "ButtonText" })</p>