@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add a New Flavor</h2>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.LabelFor(m => m.FlavorName)</h4>
  @Html.TextBoxFor(m => m.FlavorName, new { @class = "form-control" @required = "required" })
  <br>
  <h4>@Html.LabelFor(m => m.Calories)</h4>
  @Html.TextBoxFor(m => m.Calories, new { @class = "form-control", @type = "number" })
  <br>

  <input type="submit" value="Add New Flavor" class="btn btn-light ButtonText"/>
}