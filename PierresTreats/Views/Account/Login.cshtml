@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels
@model LoginViewModel

<h2>Login with your Account</h2>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.LabelFor(m => m.Email)</h4>
  @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type= "email"})
  
  <h4>@Html.LabelFor(m => m.Password)</h4>
  @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type= "password"})

  <br>
  <input type="submit" value="Login" class="btn btn-light ButtonText"/>
}
