@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h2>Add a New Treat</h2>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.Label("Treat Name")</h4>
  @Html.TextBoxFor(m => m.TreatName, new { @class = "form-control", @required = "required" })
  <br>
  <h4>@Html.LabelFor(m => m.Rating)</h4>
  @Html.DropDownList("Rating", new List<SelectListItem> { 
      new SelectListItem { Text= "⭐", Value = "⭐"}, 
      new SelectListItem { Text= "⭐⭐", Value = "⭐⭐"}, 
      new SelectListItem { Text= "⭐⭐⭐", Value = "⭐⭐⭐"}, 
      new SelectListItem { Text= "⭐⭐⭐⭐", Value = "⭐⭐⭐⭐"}, 
      new SelectListItem { Text= "⭐⭐⭐⭐⭐", Value = "⭐⭐⭐⭐⭐"}
    }, new { @class = "form-control" })
  <br>

  <input type="submit" value="Add New Treat" class="btn btn-light ButtonText"/>
}

<br>
<p class= "btn btn-light">@Html.ActionLink("See All Treats", "Index", "Treats", null, new { @class = "ButtonText"})</p>